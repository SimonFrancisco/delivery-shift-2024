<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="viewModel"
            type="com.example.mydeliveryapp.deliverycalculate.DeliveryCalculateViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".deliverycalculate.DeliveryCalculate">
        <TextView
            android:id="@+id/responsePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@{viewModel.responsePoints}" />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/responseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/responsePoint"
            android:text="@{viewModel.responseTypes}" />
    </RelativeLayout>

</layout>